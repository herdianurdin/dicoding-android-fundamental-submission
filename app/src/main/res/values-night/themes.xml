<resources>
    <!-- Base application theme. -->
    <style name="Theme.Github" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/dark_gray</item>
        <item name="android:windowBackground">@color/black</item>
    </style>
    <style name="TextCard.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_300</item>
    </style>
    <style name="TextProfile.Name">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>
    <style name="TextProfile.Username">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_400</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TextProfile.StatusName">
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/gray_400</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TextProfile.StatusCount">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:textAlignment">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TextProfile.Information">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_400</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="drawableTint">@color/gray_400</item>
    </style>
    <style name="TextProfile.Bio">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_400</item>
    </style>
    <style name="TextStatus.Text">
        <item name="android:textColor">@color/gray_400</item>
    </style>

    <style name="TextError.Text">
        <item name="android:textColor">@color/gray_400</item>
    </style>
    <style name="ProgressBarColor">
        <item name="android:indeterminateTint">@color/gray_300</item>
    </style>
    <style name="CustomTab" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/gray_400</item>
        <item name="tabIndicatorColor">@color/gray_400</item>
        <item name="tabSelectedTextColor">@color/gray_300</item>
    </style>
    <style name="CustomButton">
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/dark_gray</item>
    </style>
    <style name="CustomCard">
        <item name="android:elevation">2dp</item>
        <item name="android:background">@color/dark_gray</item>
    </style>
    <style name="SplashTheme"  parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" >@color/dark_gray</item>
        <item name="android:windowBackground">@drawable/splash_background_dark</item>
        <item name="android:navigationBarColor">@color/dark_gray</item>
    </style>
</resources>