<resources>
    <!-- Base application theme. -->
    <style name="Theme.Github" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_900</item>
        <item name="colorPrimaryVariant">@color/gray_900</item>
        <item name="colorOnPrimary">@color/gray_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_blue_900</item>
        <item name="colorSecondaryVariant">@color/gray_blue_900</item>
        <item name="colorOnSecondary">@color/gray_blue_100</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/gray_900</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    <style name="TextCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:elevation">0dp</item>
    </style>
    <style name="TextCard.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_800</item>
    </style>
    <style name="TextProfile">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextProfile.Name">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>
    <style name="TextProfile.Username">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TextProfile.StatusName">
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TextProfile.StatusCount">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textAlignment">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TextProfile.Information">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="drawableTint">@color/gray_700</item>
    </style>
    <style name="TextProfile.Bio">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_700</item>
    </style>
    <style name="TextStatus">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="TextStatus.Text">
        <item name="android:textColor">@color/gray_700</item>
    </style>
    <style name="TextResult">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextError">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextError.Text">
        <item name="android:textColor">@color/gray_700</item>
    </style>
    <style name="ProgressBarColor">
        <item name="android:indeterminateTint">@color/gray_800</item>
    </style>
    <style name="CustomTab"  parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/gray_700</item>
        <item name="tabIndicatorColor">@color/gray_700</item>
        <item name="tabSelectedTextColor">@color/gray_800</item>
    </style>
    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
    <style name="CustomButton">
        <item name="android:textColor">@color/gray_100</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/gray_900</item>
    </style>
    <style name="CustomCard">
        <item name="android:elevation">2dp</item>
        <item name="android:background">@color/gray_50</item>
    </style>
    <style name="SplashTheme"  parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" >@color/gray_900</item>
        <item name="android:windowBackground">@drawable/splash_background_light</item>
        <item name="android:navigationBarColor">@color/gray_900</item>
    </style>
</resources>